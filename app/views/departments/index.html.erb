
<h1>Departments</h1>
<p><%= link_to 'Employees', employees_path %></p>
<% if logged_in? %>
<p><%= link_to "Create new department", new_department_path %></p>
<% end %>
<table>
 <tr>
  <th>Name</th>
  <th>Actions</th>
 </tr>
 <% @departments.each do |department| %>
 <tr>
  <td><%= department.name %></td>
  <% if logged_in? %>
  <td><%= link_to 'Edit', edit_department_path(department) %></td>
  <td><%= link_to 'Show', department_path(department) %></td>
  <td><%= link_to 'Delete', department_path(department), method: :delete, data: {confirm: "Are you sure?"} %></td>
  <% end %>
 </tr>
 <% end %>
</table>
