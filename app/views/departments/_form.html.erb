<% if @department.errors.any? %>
 <h2>The following errors prevented the department from saving:</h2>
 <ul>
 <% @department.errors.full_messages.each do |msg|%>
 <li><%= msg %></li>
 <% end %>
 </ul>
<% end %>
<%= form_for @department do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit %>
  </p>



<% end %>
<%= link_to 'Back', departments_path, class: "btn btn-xs btn-success" %>
